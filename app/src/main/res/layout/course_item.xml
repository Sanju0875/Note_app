<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Note Image -->
    <ImageView
        android:id="@+id/noteImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Note Title -->
    <TextView
        android:id="@+id/noteTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Note Title"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/noteImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subject Name -->
    <TextView
        android:id="@+id/subjectNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Subject: Mathematics"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/noteImageView"
        app:layout_constraintTop_toBottomOf="@id/noteTitleTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Semester -->
    <TextView
        android:id="@+id/semesterTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Semester: 3rd"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/noteImageView"
        app:layout_constraintTop_toBottomOf="@id/subjectNameTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Faculty -->
    <TextView
        android:id="@+id/facultyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Faculty: Science"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/noteImageView"
        app:layout_constraintTop_toBottomOf="@id/semesterTextView"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
